<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hair Salon</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="col-md-8">
        <h1>Add New Client</h1>
        <form action="/clients/new" method="post" class="form-group">
          <div>
            <label for="id" <p>Which stylist do you want to add a client to?</p><label>
            <select name="id" class="form-control">
              @foreach(var stylist in Model)
              {
                <option value="@stylist.GetId()">@stylist.GetName()</option>
              }
            </select>
          </div>
          <div>
            <label for="name"><p>What is the clients name?</p></label>
            <input name="name" type="text" class="form-control">
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Add a client</button>
        </form>
        <p><a href="/stylists">View Stylists</a></p>
        <p><a href="/">Home</a></p>
      </div>
    </div>
  </body>
</html>
