
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HairSalon</title>
  </head>
  <body>
    <h1>Add New Client</h1>
    <form action="/clients/new" method="post">
      <div class="form-group">
        <label for="client-name">Add client name</label>
        <input class="form-control" name="client-name" type="text">
      </div>
      <div class="form-group">
        <select name="stylist-id">
          @foreach(var stylist in Model)
          {
            <option value="@stylist.GetId()">@stylist.GetName()</option>
          }
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Add New client</button>
    </form>
    <a href="/">Home</a>
  </body>
</html>
