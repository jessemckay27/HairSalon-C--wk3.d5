@{
	Layout="Shared/_Layout.cshtml";
}
<h1>Edit Client Name: @Model.GetName()</h1>
<p>What would you like the new name to be?</p>
<form action="/client_edit/@Model.GetId()" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="PATCH">
  </div>
  <div class="form-group">
    <input name="id" type="hidden" value="@Model.GetId()">
    <label for="name">Client Name</label>
    <input name="name" type="text">
    <button type="submit">Submit</button>
  </div>
</form>
<p><a href="/stylists">View Stylists</a></p>
<p><a href="/">Home</a></p>
